# Multi-Agent System Visualizer Configuration Template
# Copy this file to env.local and fill in your API keys

# Azure OpenAI Configuration
AZURE_API_KEY="your_azure_openai_api_key_here"
AZURE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/openai/v1/
AZURE_API_VERSION=2024-04-01-preview

# Perplexity API Configuration
PERPLEXITY_API_KEY="your_perplexity_api_key_here"

# Server Configuration
PORT=4321
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./data/agents.db

# Agent Configuration
MAX_CONVERSATION_LENGTH=50
AGENT_MEMORY_SIZE=100
